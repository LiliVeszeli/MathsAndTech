/**********************************************
	DiffuseColour.psh

	Pixel shader that simply outputs diffuse 
	colour passed in from vertex shader
***********************************************/

//-----------------------------------------------------------------------------
// Input / output structures
//-----------------------------------------------------------------------------

// Input to Pixel Shader
struct PS_Input
{
	float3 DiffuseColour : COLOR0;
};

// Output from Pixel Shader
struct PS_Output
{
	float4 Colour : COLOR0;
};

//-----------------------------------------------------------------------------
// Main function
//-----------------------------------------------------------------------------

// Main pixel shader function
void main( in PS_Input i, out PS_Output o ) 
{
    o.Colour.rgb = i.DiffuseColour;
    o.Colour.a = 1.0f;
}
